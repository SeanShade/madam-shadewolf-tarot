{
  "version": 2,
  "builds": [
    // “Use the static file at index.html”
    { "src": "index.html", "use": "@vercel/static" },
    // “Any JS in /api/ becomes a Node serverless function”
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    // Route the root path "/" → index.html
    { "src": "/", "dest": "/index.html" },
    // Route any /api/xyz → the file api/xyz.js
    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}
